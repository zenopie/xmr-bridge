# Monero Node (external)
MONERO_RPC_URL=http://node.moneroworld.com:18089/json_rpc
MONERO_NETWORK=mainnet

# Monero Wallet - Option 1: Use seed/mnemonic (recommended)
MONERO_SEED=your 25 word monero seed phrase here
# The bridge will derive address, view key, and spend key from the seed

# Monero Wallet - Option 2: Provide keys directly (alternative)
# MONERO_WALLET_ADDRESS=4...your_monero_primary_address
# MONERO_VIEW_KEY=your_private_view_key_hex
# MONERO_SPEND_KEY=your_private_spend_key_hex

# Monero Wallet RPC (for creating transactions with spend key)
MONERO_WALLET_RPC_URL=http://127.0.0.1:18083/json_rpc
MONERO_WALLET_RPC_USER=
MONERO_WALLET_RPC_PASSWORD=
# If using wallet RPC, it must have access to the spend key

# Secret Network Configuration
SECRET_NETWORK_RPC=https://lcd.mainnet.secretsaturn.net
SECRET_NETWORK_CHAIN_ID=secret-4
SECRET_WALLET_MNEMONIC=your 24 word secret network mnemonic here
SXMR_CONTRACT_ADDRESS=secret1...
SXMR_CONTRACT_HASH=contract_code_hash

# Bridge Settings
MIN_CONFIRMATIONS=10
POLL_INTERVAL=60
DATABASE_PATH=bridge.db
